    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.9.1/gsap.min.js"></script>
    <script>
        // –ê–Ω–∏–º–∞—Ü–∏–∏ –ø—Ä–∏ —Å–∫—Ä–æ–ª–ª–µ
        document.addEventListener('DOMContentLoaded', function() {
            const animateElements = document.querySelectorAll('.animate__animated');
            
            animateElements.forEach(element => {
                element.style.opacity = '0';
            });
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const animation = entry.target.getAttribute('class').match(/animate__(\w+)/)[1];
                        entry.target.style.opacity = '1';
                        entry.target.classList.add(`animate__${animation}`);
                    }
                });
            }, { threshold: 0.1 });
            
            animateElements.forEach(element => {
                observer.observe(element);
            });
            
            // –ê–Ω–∏–º–∞—Ü–∏—è RGB –ª–∏–Ω–∏–∏
            const rgbLine = document.querySelector('.rgb-line');
            setInterval(() => {
                const hue = Math.floor(Math.random() * 360);
                rgbLine.style.background = `linear-gradient(to bottom, hsl(${hue}, 100%, 50%), hsl(${(hue + 120) % 360}, 100%, 50%), hsl(${(hue + 240) % 360}, 100%, 50%)`;
            }, 2000);
        });
    </script>
</body>
</html>
